@*@model Review*@
@model ReviewViewModels

@{
    Layout = "~/Views/Shared/_LayoutReview.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3>Delete Page</h3>
            <hr />
            <label>Do wou want delete this row ?</label>
            <form asp-action="Delete" method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" type="text" class="form-control" id="txtName" readonly>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="5" cols="40" readonly></textarea>
                </div>
                <div class="row">
                    <div class="btn btn-block text-sm-left">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a href="/Review/AddNewReview" class="btn btn-primary">New Review</a>
                        <a href="/Review/Index" class="btn btn-primary">Start</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

